//- Mixin for post, used on homepage and post page
mixin postHead(post)
  .post-head.group
    a(href="/#{post.url}")
      h1.post-title= post.title
    h2.post-date!= [post.date.getUTCFullYear(), post.date.getMonth() + 1, post.date.getDate()].join(' &#183; ')

mixin post(post)
  mixin postHead(post)
  .post-body!= post.content

doctype 5
html
  head
    meta(charset="utf8")
    meta(name="viewport", content="width=device-width")
    link(rel="icon", type="image/png", href="/images/cabin.png")
    link(href="/styles/main.css", rel="stylesheet")
    block title
      title= "cyberskunk's Blog"
  body
    nav#nav
      h1.name
        a(href="/") cyberskunk
      ul.nav-links
        li.menu-in.menu
          a(href="#nav").icon-menu
        li.menu-out.menu
          a(href="#").icon-menu
        li
          a(href="/about.html") about
        li
          a(href="/archives.html") archives

      .social-media
        a.icon-github(href="https://github.com/cy6erskunk")
        a.icon-twitter(href="https://twitter.com/cyberskunk")

    .content
      block content
    a(href="http://colinwren.github.io/Cabin/")
      img.cabin(src="/images/cabin.png")
